{
  "compilerOptions": {
    "target": "es5", // or "es2015", depending on how modern you want the emitted code
    "lib": [
      "es2017",   // <-- this is important for async/await
      "dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
